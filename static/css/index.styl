//首页头部
html,body
  overflow hidden
  overflow-y auto
#header
  width 100%
  .header_search
    width 100%
    display flex
    flex-flow row nowrap
    align-items center
    padding 8px 15px
    .logo
      img
        display inline-block
        width 138px
        height 40px
        background-position center
        background-size cover
        line-height 88px
        margin-left 15px
    .searchInput
      width 442px
      height 56px
      background #eee
      border-radius 5px
      margin-left 20px
      img
        width 28px
        height 28px
        padding-left 20px
        margin-top 10px
      .placeholder
        font-size 28px
        color #666666
        margin-left 10px

    .loginBtn
      width 76px
      height 42px
      line-height 42px
      font-size 24px
      text-align center
      color red
      border-radius 5px
      border 1px solid #b4282d
      margin-left 15px
  .header_nav
    width 100%
    height 60px
    .header_nav_list
      width 100%
      height 60px
      .nav_item
        font-size 28px
        float left
        padding 0px 36px
        line-height 60px
        //首页
#content
  .home
    .text_list
      height 72px
      padding 0px 30px
      width 100%
      .text_list_item
        float left
        line-height 72px
        margin 0 auto
        span
          font-size 24px
          color #b4282d
          margin-left 50px
          text-align center
    .goods_nav
      width 100%
      height 340px
      box-sizing border-box
      .goods_list
        margin-left 15px
        .goods_item
          float left
          width 110px
          height 156px
          margin 10px 15px 0
          img
            width 110px
            height 110px
          p
            font-size 24px
            text-align center
    .boss
      width 100%
      margin-bottom 20px
      img
        height 160px
    .focus
      width 100%
      height 528px
      margin 0 0 10px
      .focus_list
        height 100%
        margin-left 25px
        li
          float left
          background #f5f5f5
          margin 4px 0 0 4px
          padding 20px 0 0 20px
          img
            width 150px
            height 150px
            margin 0 4px 0 0
          .p1
            font-size 32px
            padding 0 0 0 10px
            margin 10px 0 10px 0
          .p2
            font-size 24px
            padding 0 0 0 10px
            margin 10px 0
    .goods_brand
      width 100%
      height 100px
      padding 0 30px
      overflow hidden
      .goods_brand_text
        font-size 32px
        line-height 100px
      .brand_more
        float right
        font-size 24px
        color #000000
        margin-right 50px
        line-height 100px
    .brand_container
      width 100%
      height 555px
      .brand_list
        width 100%
        height 100%
        margin 0 0 20px
        padding 0 30px 25px 30px
        .brand_item
          margin 0 4px 4px 0
          width 342px
          height 260px
          float left
          background-size 100% 100%
          .brand_box
            width 342px
            height 260px
            line-height 260px
            text-align center
            

















    //        //私人订制
    .private
      font-size 32px
      width 100%
      height 100%
      line-height 100px
      padding 0 30px


